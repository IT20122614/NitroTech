<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nitrotech">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NitroTech">
        <activity android:name=".CheckoutPage"
            android:parentActivityName=".WishlistPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WishlistPage" />
        </activity>
        <activity
            android:name=".WishlistPage"
            android:parentActivityName=".ProfilePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfilePage" />
        </activity>
        <activity
            android:name=".AddressBook"
            android:parentActivityName=".ProfilePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfilePage" />
        </activity>
        <activity
            android:name=".ConfirmDelete"
            android:parentActivityName=".EditProfile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EditProfile" />
        </activity>
        <activity
            android:name=".EditProfile"
            android:parentActivityName=".ProfilePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfilePage" />
        </activity>
        <activity
            android:name=".ProfilePage"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginPage" />
        </activity>
        <activity
            android:name=".SignupPage"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginPage" />
        </activity>
        <activity
            android:name=".LoginPage"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>